<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ponthaitay.lifecycleactivity.googleio2017">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainMenuActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".lifecycle.kotlincode.MainLifecycleActivity" />
        <activity android:name=".lifecycle.javacode.MainLifecycleActivity" />
        <activity android:name=".livedata.kotlincode.MainLiveDataActivity" />
        <activity android:name=".livedata.javacode.MainLiveDataActivity" />
        <activity android:name=".viewmodel.kotlincode.MainViewModelActivity" />
        <activity android:name=".viewmodel.javacode.MainViewModelActivity" />
        <activity android:name=".room.kotlincode.MainRoomActivity" />
        <activity android:name=".room.javacode.MainRoomActivity" />
    </application>

</manifest>